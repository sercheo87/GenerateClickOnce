    <sql active="S">
        <!--S/N-->
        <template>
            <!--Items de Utilizacion-->
            <!-- {0} NOMBRE-->
            <!-- {1} VERSION-->
            <!-- [NEWLINE] Nueva Linea-->
            <!-- [TAB] Tabulador-->
            <!-- [NTAB] Nueva Linea + Tabulador-->
            <header>
                use cobis 
                [NEWLINE]go 
                [NEWLINE]begin tran
            </header>
            <body>
                [NTAB]update cobis..an_module_group set mg_version='{1}' where mg_name='{0}'
            </body>
            <footer>
                [NEWLINE]if @@error!=0
                [NEWLINE]begin
                [NTAB]roolback tran
                [NTAB]print 'Error en actualizacion de version'
                [NEWLINE]end
                [NEWLINE]else
                [NEWLINE]begin
                [NTAB]commit tran
                [NTAB]print 'Se actualizo la version correctamente'
                [NEWLINE]end
                [NEWLINE]go
            </footer>
        </template>
    </sql>

